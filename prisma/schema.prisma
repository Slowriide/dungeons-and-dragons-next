generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String      @id @default(cuid())
  email         String      @unique
  name          String?
  password      String? //Null for OAuth
  emailVerified DateTime?
  image         String?
  characters    Character[]
  accounts      Account[] //Google OAuth
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Character {
  id     String  @id @default(cuid())
  userId String?

  // Basic Info
  name             String
  characterClass   String
  race             String
  level            Int     @default(1)
  background       String?
  alignment        String?
  experiencePoints Int     @default(0)

  // Combat Stats
  hitDie           Int?
  hitPoints        Int?
  armorClass       Int?
  speed            Int?
  proficiencyBonus Int?
  size             String?
  iniciative       Int?

  // Attributes
  baseAttributes         Json // { strength: 10, dexterity: 12, ... }
  abilityBonuses         Json? // { strength: 2, dexterity: 1, ... }
  selectedAbilityBonuses String[] // ["str", "dex"]

  // Skills
  skills             Json? // CharacterSkill[]
  backgroundSkills   Json? // CharacterSkill[]
  classProficiencies Json? // ClassProficiency[]

  // Proficiencies
  proficiencies            String[]
  selectedProficiencies    String[]
  classWeaponProficiencies String[]
  classArmorProficiencies  String[]

  // Languages
  languages           String[]
  raceLanguages       String[]
  backgroundLanguages String[]

  // Equipment & Gold
  equipment               Json? // Equipment[]
  selectedEquipmentOption String?
  gold                    Json? // GoldEntry[]

  // Traits & Features
  raceTraits      Json? // Trait[]
  selectedTraits  Json? // Trait[]
  backgroundTrait Json? // Trait (singular)
  classFeatures   Json? // CharacterClassFeature[]

  // Personality
  backgroundSelections Json? // BackgroundSelections

  // Metadata
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])

  @@index([userId])
}
